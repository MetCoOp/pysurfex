#!/usr/bin/env python3

import json
import surfex

if __name__ == "__main__":
    json_file, toml_file, output_file = surfex.MergeSettings().parse()
    json_settings = surfex.MergeSettings().merge(json_file, toml_file)
    fh = open(output_file,"w")
    json.dump(json_settings, fh, indent=2)
    fh.close()
